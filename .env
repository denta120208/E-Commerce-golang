DB_PASSWORD=ecommerce_password
DB_NAME=ecommerce_db

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Server Configuration
PORT=8080

# Environment
NODE_ENV=development

# Frontend Configuration (for Vite)
